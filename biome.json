{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
  "javascript": {
    "formatter": {
			"indentStyle": "space",
			"indentWidth": 2,
			"quoteStyle": "single",
      "semicolons": "always"
    }
  },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
